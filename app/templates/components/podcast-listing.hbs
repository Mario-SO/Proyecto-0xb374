<article class="listing">
    <a class="image {{if this.isWide "wide"}}" role="button">
        <a onclick={{action "toggleImageSize"}} class="image {{if this.isWide "wide"}}" role="button">
            <img src={{this.podcast.image}} alt="">
        </a>
        <audio controls>
            <source src="../../../public/assets/audio-files/ep0.mp3" type="audio/mpeg">
        </audio>
    </a>
    <div class="details">
        <h3>{{this.podcast.title}}</h3>
        <div class="detail owner">
            <span>Owner:</span> {{this.podcast.owner}}
        </div>
        <div class="detail type">
            <span>Type:</span> {{this.podcast.category}}
        </div>
        <div class="detail location">
            <span>Location:</span> {{this.podcast.city}}
        </div>
        <div class="detail bedrooms">
            <span>Number of bedrooms:</span> {{this.podcast.bedrooms}}
        </div>
    </div>
</article>